CC          =   gcc
NAME		= 	a.out
SRC         =   main.c
OBJ         =   $(SRC:%.c=%.o)
RM          =   rm -f
INCS        =   -Iinclude
LDFLAGS     =   -Lbin -lasmlib

all         :   $(NAME)

$(NAME)     :   $(OBJ)
				$(CC) $(OBJ) $(LDFLAGS)
				$(RM) $(OBJ)

clean       :
				$(RM) $(OBJ)

fclean      :           clean
				$(RM) $(NAME)

re          :   fclean all

.PHONY      :   re

